<% @posts.each do |p| %>
  <div class="hero-unit">
	  <p><b><a href= "<%= p.url %>"><%= p.title %></a></b><%= " (" + p.url + ")" if p.url %></p>
	  <p>Created on <%= p.created_at.strftime('%B %d, %Y') %> by <%= p.user.email %></p>
	  <a  class="label" href="/post/<%= p.id %>"><%= p.comments.count %> comments</a> <p class="label label-success"><%= p.post_votes.count %> votes</p>
  </div>
<% end  %>
