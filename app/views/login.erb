<h1>Login</h1>

<% if @errors %>
  <p><%= @errors %></p>
<% end %>

<div class="navbar-form pull-right">
  <form action="/user/login" method="post" class="login-box">
    <input type="text" name="login[email]" class="input-small" placeholder="Email">
    <input type="password" name="login[password]" class="input-small" placeholder="Password">
    <input type="submit" value="Login" class="btn">
  </form>
</div>

<h1>Sign up</h1>

<% if @user %>
  <% @user.errors.full_messages.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>

<form action="/user/signup" method="post" class="login-box">
  <input type="text" name="signup[email]" class="input-small" placeholder="Email">
  <input type="password" name="signup[password]" class="input-small" placeholder="Password">
  <input type="submit" value="Sign Up" class="btn">
</form>
